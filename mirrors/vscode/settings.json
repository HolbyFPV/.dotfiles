  // ================================================================================
  // Terminal
  // ================================================================================
  "terminal.integrated.defaultProfile.windows": "MinGW",
  "terminal.integrated.profiles.windows": {
    "MinGW": {
      "path": "${env:USERPROFILE}\\scoop\\apps\\git\\current\\bin\\bash.exe"
    },
    "PowerShell": {
      "source": "PowerShell"
    }
  },
  // not supported yet...
  // "terminal.fontLigatures": true,

  // ================================================================================
  // Git
  // ================================================================================
  "git.openRepositoryInParentFolders": "always",
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  "gitlens.graph.minimap.enabled": false,
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "stash-push:command",
    "switch:command",
    "push:command"
  ],

  // ================================================================================
  // Debugger
  // ================================================================================
  "debug.toolBarLocation": "hidden",
  "debug.inlineValues": "on",
  "debug.onTaskErrors": "abort",
  "debug.openDebug": "neverOpen",

  "statusbarDebugger.command": "start",
  "statusbarDebugger.template": "$(bug)",
  "statusbarDebugger.actionsIcons": [
    "$(debug-pause)",
    "$(debug-continue)",
    "$(debug-step-over)",
    "$(debug-step-into)",
    "$(debug-step-out)",
    "$(debug-step-back)"
  ],
  "statusbarDebugger.actions": [
    "pause",
    "continue",
    "step_over",
    "step_into",
    "step_out",
    "restart"
  ],

  // ================================================================================
  // LSP
  // ================================================================================
  "omnisharp.enableRoslynAnalyzers": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ================================================================================
  // Editor
  // ================================================================================
  "editor.inlineSuggest.enabled": true,
  "editor.stickyScroll.enabled": true,
  "editor.renderLineHighlight": "none",
  "editor.cursorBlinking": "solid",
  "editor.minimap.enabled": false,
  "editor.guides.indentation": false,
  "editor.fontSize": 15,
  "editor.lineNumbers": "relative",
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.fontLigatures": true,
  "editor.tabSize": 4,
  "editor.hover.sticky": true,
  "editor.accessibilitySupport": "off",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 5,
  "editor.cursorSurroundingLines": 8,

  // ================================================================================
  // Miscelanious
  // ================================================================================
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "explorer.confirmDragAndDrop": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.advanced": {},

  // ================================================================================
  // Theme
  // ================================================================================
  "workbench.colorTheme": "GitHub Dark Dimmed",
  "vim.searchHighlightColor": "#212934",
  "vim.searchHighlightTextColor": "#00FFCB",
  "vim.searchMatchColor": "#212934",
  "vim.searchMatchTextColor": "#00FFCB",
  "vim.highlightedyank.color": "#00ffcb",
  "vim.highlightedyank.textColor": "#1c2128",
  "vim.highlightedyank.duration": 1500,
  "workbench.editor.tabCloseButton": "off",
  "workbench.editor.showTabs": false,
  "workbench.editor.enablePreview": false,
  "workbench.layoutControl.enabled": false,
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "Monokai Pro Icons",
  "workbench.editor.revealIfOpen": true,
  "workbench.colorCustomizations": {
    "editor.background": "#1c2128",
    "sideBar.background": "#1c2128",
    "panel.background": "#1c2128",
    "activityBar.activeBorder": "#1c2128",
    "activityBar.foreground": "#7ce38b",
    "activityBarBadge.background": "#7ce38b",
    "activityBarBadge.foreground": "#1c2128",
    "activityBar.background": "#1c2128",
    "statusBar.debuggingBackground": "#1c2128",
    // https://github.com/microsoft/vscode/issues/36490
    // "editor.selectionBackground": "#7ce38b",
    // "editor.selectionForeground": "#1c2128",
    "statusBar.background": "#1c2128",
    "statusBar.noFolderBackground": "#1c2128",
    "titleBar.inactiveBackground": "#1c2128",
    "titleBar.activeBackground": "#1c2128",
    "editorCursor.foreground": "#7ce38b",
    "editorCursor.background": "#1c2128",
    "editorLineNumber.activeForeground": "#7ce38b"
  },

  // ================================================================================
  // APC - UI Customizer
  // ================================================================================
  "window.titleBarStyle": "native",
  "apc.font.family": "JetBrainsMono Nerd Font Mono",
  "apc.menubar.compact": true,
  "apc.electron": {
    "frame": false,
    "titleBarStyle": "hidden"
  },
  "apc.header": {
    "height": 37
  },
  "apc.sidebar.titlebar": {
    "height": 37
  },
  "apc.activityBar": {
    "size": 40,
    "itemSize": 40,
    "itemMargin": 0
  },
  "apc.stylesheet": {
    ".title-label": "display: none !important",
    ".composite.title": "display: block !important",
    ".monaco-workbench .part.sidebar .title-actions .actions-container": "justify-content: space-evenly !important"
  },
}
